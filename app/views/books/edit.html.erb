<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <div class="field">
    <label>Title</label>
    <div><%= f.text_field :title %></div>
  </div>
  
  <div class="field">
    <label>Body</label>
    <div><%= f.text_area :body %></div>
  </div>
  
  <div class="actions">
      <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
<span>|</span>
<%= link_to "Back", books_path %>